{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-empty": ["error", { "allowEmptyCatch": true }]
  },
  "ignorePatterns": [
    "node_modules/",
    "*.tgz",
    "logs/",
    ".DS_Store",
    "Thumbs.db",
    "niopd-workspace/",
    "coverage/",
    ".nyc_output/",
    ".env*",
    "tmp/",
    "temp/",
    "*.backup",
    "*.bak"
  ]
}